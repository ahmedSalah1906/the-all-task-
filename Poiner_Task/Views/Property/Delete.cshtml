@model Poiner_Task.Models.PropertyForEmployee

@{
    ViewData["Title"] = "Delete Property";
}

<h2>Delete Property</h2>

<div>
    <h4>Are you sure you want to delete this property?</h4>
    <div>
        <strong>Property Name:</strong> @Model.Name
    </div>
    <div>
        <strong>Property Type:</strong> @Model.Type
    </div>
    <div>
        <strong>Required:</strong> @(Model.IsRequired ? "Yes" : "No")
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
